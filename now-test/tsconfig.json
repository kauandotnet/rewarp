{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",

    "incremental": true,
    "resolveJsonModule": true,

    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist"]
}
