{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["esnext"],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/graphql": ["libs/graphql/src"],
      "@app/graphql/*": ["libs/graphql/src/*"],
      "@app/database": ["libs/database/src"],
      "@app/database/*": ["libs/database/src/*"],
      "@app/util": ["libs/util/src"],
      "@app/util/*": ["libs/util/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
