{
  "name": "rewarp",
  "description": "Time tracking app",
  "repository": "https://github.com/vadistic/rewarp",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "version": "0.1.0",
  "license": "No License",
  "private": true,
  "scripts": {
    "script:sync": "env-cmd ts-node scripts/sync",
    "script:seed": "env-cmd ts-node scripts/seed",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "env-cmd -f .env ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "env-cmd -f .env tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "env-cmd -f .env tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "env-cmd -f .env node dist/main.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/typeorm": "^6.2.0",
    "apollo-server-express": "^2.9.4",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "dataloader": "^1.4.0",
    "graphql": "^14.5.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "type-graphql": "^0.17.5",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.7.2",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "4.17.1",
    "@types/faker": "^4.1.5",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.8",
    "@types/passport-jwt": "^3.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.11.2",
    "@types/prettier": "^1.18.2",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "env-cmd": "^10.0.1",
    "eslint": "^6.5.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "faker": "^4.1.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tsc-watch": "4.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "^3.7.0-beta"
  }
}
