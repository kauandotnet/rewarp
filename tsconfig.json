{
  "compilerOptions": {
    "moduleResolution": "node",

    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@lib/database": ["./libs/database"],
      "@lib/shared/*": ["./libs/shared/"]
    }
  }
}
