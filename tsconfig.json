{
  "compilerOptions": {
    "moduleResolution": "node",

    "target": "es2018",
    "lib": ["dom", "esnext"],

    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true
  }
}
